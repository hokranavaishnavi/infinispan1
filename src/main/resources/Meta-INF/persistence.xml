<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="myPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>             <!-- DB Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/employee_jpadb?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="vaishu"/>             <!-- Hibernate Dialect -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL8Dialect"/>             <!-- Auto Schema Update -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>             <!-- SQL Logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>             <!-- Second Level Cache -->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache"
                      value="true"/>             <!-- Correct Infinispan Provider for Hibernate 6 -->
            <property name="hibernate.cache.region.factory_class"
                      value="org.infinispan.hibernate.cache.v62.InfinispanRegionFactory"/>             <!-- Infinispan XML configuration -->
            <property name="hibernate.cache.infinispan.cfg"
                      value="infinispan-config.xml"/>             <!-- For debugging cache -->
            <property name="hibernate.generate_statistics" value="true"/>
        </properties>
    </persistence-unit>
</persistence>